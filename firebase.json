{
  "hosting": {
    "public": "resources/public",
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/*.map",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/api/hello",
        "function": "handleRequest"
      },
      {
	"source": "/**",
	"function": "index"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    }
  }
}
